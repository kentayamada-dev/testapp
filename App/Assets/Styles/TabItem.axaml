<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <Border Padding="20" Width="500" Height="300">
      <TabControl Classes="CustomTabControl">
        <TabItem Header="Tab 1" Classes="CustomTabItem">
          <TextBlock Text="Hello" FontSize="70" />
        </TabItem>
        <TabItem Header="Tab 2" Classes="CustomTabItem">
          <TextBlock Text=" World" FontSize="70" />
        </TabItem>
      </TabControl>
    </Border>
  </Design.PreviewWith>

  <Style Selector="TabItem.CustomTabItem /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
    <Setter Property="Padding" Value="20,5" />
  </Style>

  <Style Selector="TabItem.CustomTabItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource HoverColor}" />
  </Style>

  <Style Selector="TabItem.CustomTabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0,0,0,2" />
    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}" />
  </Style>
</Styles>
