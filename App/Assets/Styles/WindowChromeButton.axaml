<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <Border Padding="20" Width="300" Height="100">
      <Button Classes="WindowChromeButton">
        <Svg Path="/Assets/Icons/cross.svg" Classes="ChromeButtonSvg" />
      </Button>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Button.WindowChromeButton">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="20,6" />
  </Style>

  <Style Selector="Button.WindowChromeButton:pointerover">
    <Setter Property="Background" Value="{DynamicResource HoverColor}" />
  </Style>

  <Style Selector="Button.WindowChromeButton:pressed  /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource HoverColor}" />
  </Style>
</Styles>
