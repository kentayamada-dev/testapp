<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <Border Padding="20" Width="300" Height="100">
      <Button Classes="MenuButton">
        Hello
      </Button>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Button.MenuButton">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="CornerRadius" Value="3" />
    <Setter Property="Padding" Value="10,2" />
  </Style>

  <Style Selector="Button.MenuButton:pointerover">
    <Setter Property="Background" Value="{DynamicResource HoverColor}" />
  </Style>

  <Style Selector="Button.MenuButton:pressed  /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="{DynamicResource HoverColor}" />
  </Style>
</Styles>
