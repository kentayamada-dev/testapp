<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:App"
             x:Class="App.App"
             Name="{x:Static local:App.AppName}">

  <NativeMenu.Menu>
    <NativeMenu>
      <NativeMenuItem Header="About">
        <NativeMenu>
          <NativeMenuItem Header="App" Click="AboutApp_Click" />
          <NativeMenuItem Header="Developer" Click="AboutDeveloper_Click" />
        </NativeMenu>
      </NativeMenuItem>
      <NativeMenuItem Header="Check Update" Click="CheckUpdate_Click" />
    </NativeMenu>
  </NativeMenu.Menu>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Assets/Resources/ThemeResource.axaml" />
      </ResourceDictionary.MergedDictionaries>
      <x:Double x:Key="ChromeHeight">30</x:Double>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
    <StyleInclude Source="/Assets/Styles/WindowChromeButton.axaml" />
    <StyleInclude Source="/Assets/Styles/MenuButton.axaml" />
    <StyleInclude Source="/Assets/Styles/MenuItem.axaml" />
    <StyleInclude Source="/Assets/Styles/Window.axaml" />

    <Style Selector="Button.WindowChromeCloseButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Red" />
    </Style>

    <Style Selector="Svg.ChromeButtonSvg">
      <Setter Property="Css" Value="{DynamicResource SvgCss}" />
    </Style>

    <Style Selector="Button.WindowChromeCloseButton:pointerover Svg.ChromeButtonCloseSvg">
      <Setter Property="Css" Value="* { fill: #ffffff; }" />
    </Style>

    <SimpleTheme />
  </Application.Styles>
</Application>
